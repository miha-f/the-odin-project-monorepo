<div class="max-w-screen-xl mx-auto px-4 py-8">
    <form 
        class="space-y-4" 
        action="/users/login"
        method="POST"
    >
    
        <label for="email" class="text-sm font-light">Email</label>
        <input
            type="email"
            id="email"
            name="email"
            placeholder="Email"
            value="<%= formData ? formData.email: '' %>"
            class="w-full p-2 border border-gray-300 rounded"
        />
        <% if (formErrors?.email) { %>
        <ul class="text-accent text-sm">
            <% formErrors.email.forEach(msg => { %>
            <li><%= msg %></li>
            <% }) %>
        </ul>
        <% } %>

        <label for="Password" class="text-sm font-light">Password</label>
        <input
            type="password"
            name="password"
            min=5
            id="password"
            placeholder="Password"
            value="<%= formData ? formData.password: '' %>"
            class="w-full p-2 border border-gray-300 rounded"
        />
        <% if (formErrors?.password) { %>
        <ul class="text-accent text-sm">
            <% formErrors.password.forEach(msg => { %>
            <li><%= msg %></li>
            <% }) %>
        </ul>
        <% } %>

        <button
            type="submit"
            class="px-4 py-2 bg-primary text-background rounded hover:underline"
        >
            <%= userId ? 'Update' : 'Login' %>
        </button>
    </form>
</div>
