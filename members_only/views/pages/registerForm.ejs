<div class="max-w-screen-xl mx-auto px-4 py-8">
    <form 
        class="space-y-4" 
        action=<%= userId ? ('/users/' + userId + '/update') : '/users/register' %>
        method="POST"
    >

        <label for="username" class="text-text text-sm font-light">Username</label>
        <input
            type="text"
            id="username"
            name="username"
            placeholder="Username"
            value="<%= formData ? formData.username : '' %>"
            class="text-text w-full p-2 border border-gray-300 rounded"
        />
        <% if (formErrors?.username) { %>
        <ul class="text-text text-accent text-sm">
            <% formErrors.username.forEach(msg => { %>
            <li><%= msg %></li>
            <% }) %>
        </ul>
        <% } %>
    
        <label for="email" class="text-text text-sm font-light">Email</label>
        <input
            type="email"
            id="email"
            name="email"
            placeholder="Email"
            value="<%= formData ? formData.email : '' %>"
            class="text-text w-full p-2 border border-gray-300 rounded"
        />
        <% if (formErrors?.email) { %>
        <ul class="text-text text-accent text-sm">
            <% formErrors.email.forEach(msg => { %>
            <li><%= msg %></li>
            <% }) %>
        </ul>
        <% } %>

        <label for="password1" class="text-text text-sm font-light">Password</label>
        <input
            id="password1"
            type="password"
            name="password1"
            placeholder="Password"
            value="<%= formData ? formData.password1 : '' %>"
            class="text-text w-full p-2 border border-gray-300 rounded"
        />
        <% if (formErrors?.password1) { %>
        <ul class="text-text text-accent text-sm">
            <% formErrors.password1.forEach(msg => { %>
            <li><%= msg %></li>
            <% }) %>
        </ul>
        <% } %>

        <input
            type="password"
            name="password2"
            placeholder="Confirm password"
            value="<%= formData ? formData.password2 : '' %>"
            class="text-text w-full p-2 border border-gray-300 rounded"
        />
        <% if (formErrors?.password2) { %>
        <ul class="text-text text-accent text-sm">
            <% formErrors.password2.forEach(msg => { %>
            <li><%= msg %></li>
            <% }) %>
        </ul>
        <% } %>

        <fieldset class="space-y-2">
            <legend class="text-text font-light text-sm">Select Role:</legend>
            <label class="inline-flex items-center space-x-2 mr-4">
                <input type="radio" name="role" value="user" class="form-radio" checked>
                <span class="text-text">User</span>
            </label>
            <label class="inline-flex items-center space-x-2 mr-4">
                <input type="radio" name="role" value="member" class="form-radio">
                <span class="text-text">Member</span>
            </label>
            <label class="inline-flex items-center space-x-2">
                <input type="radio" name="role" value="admin" class="form-radio">
                <span class="text-text">Admin</span>
            </label>
        </fieldset>

        <button
            type="submit"
            class="text-white px-4 py-2 bg-primary rounded hover:underline"
        >
            Register
        </button>
    </form>
</div>
