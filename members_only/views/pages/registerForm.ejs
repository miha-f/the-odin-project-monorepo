<div class="max-w-screen-xl mx-auto px-4 py-8">
    <form 
        class="space-y-4" 
        action=<%= userId ? ('/posts/' + postId + '/update') : '/posts/create' %>
        method="POST"
    >

        <label for="username" class="text-sm font-light">Username</label>
        <input
            type="text"
            id="username"
            name="username"
            placeholder="Username"
            value="<%= formData ? formData.title : '' %>"
            class="w-full p-2 border border-gray-300 rounded"
        />
        <% if (formErrors?.title) { %>
        <ul class="text-accent text-sm">
            <% formErrors.title.forEach(msg => { %>
            <li><%= msg %></li>
            <% }) %>
        </ul>
        <% } %>
    
        <label for="email" class="text-sm font-light">Email</label>
        <input
            type="email"
            id="email"
            name="email"
            placeholder="Email"
            value="<%= formData ? formData.title : '' %>"
            class="w-full p-2 border border-gray-300 rounded"
        />
        <% if (formErrors?.title) { %>
        <ul class="text-accent text-sm">
            <% formErrors.title.forEach(msg => { %>
            <li><%= msg %></li>
            <% }) %>
        </ul>
        <% } %>

        <label for="password1" class="text-sm font-light">Password</label>
        <input
            id="password1"
            type="password"
            name="password1"
            placeholder="Password"
            value="<%= formData ? formData.title : '' %>"
            class="w-full p-2 border border-gray-300 rounded"
        />
        <% if (formErrors?.title) { %>
        <ul class="text-accent text-sm">
            <% formErrors.title.forEach(msg => { %>
            <li><%= msg %></li>
            <% }) %>
        </ul>
        <% } %>

        <input
            type="password"
            name="password2"
            placeholder="Confirm password"
            value="<%= formData ? formData.title : '' %>"
            class="w-full p-2 border border-gray-300 rounded"
        />
        <% if (formErrors?.title) { %>
        <ul class="text-accent text-sm">
            <% formErrors.title.forEach(msg => { %>
            <li><%= msg %></li>
            <% }) %>
        </ul>
        <% } %>

        <fieldset class="space-y-2">
            <legend class="font-light text-sm">Select Role:</legend>
            <label class="inline-flex items-center space-x-2">
                <input type="radio" name="role" value="user" class="form-radio" checked>
                <span>User</span>
            </label>
            <label class="inline-flex items-center space-x-2">
                <input type="radio" name="role" value="member" class="form-radio">
                <span>Member</span>
            </label>
            <label class="inline-flex items-center space-x-2">
                <input type="radio" name="role" value="admin" class="form-radio">
                <span>Admin</span>
            </label>
        </fieldset>

        <button
            type="submit"
            class="px-4 py-2 bg-primary text-background rounded hover:underline"
        >
            Register
        </button>
    </form>
</div>
