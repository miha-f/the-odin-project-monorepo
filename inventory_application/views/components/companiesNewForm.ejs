<form action="/companies" method="POST" class="max-w-4xl mx-auto p-6 space-y-6">
  <h1 class="text-4xl font-bold text-text">Create New Category</h1>
  <div class="flex flex-col sm:flex-row items-center gap-4">
    <div class="w-full">
      <label for="companyName" class="block text-sm font-medium text-text">Item Name</label>
      <input type="text" id="companyName" name="companyName" required
             value="<%= formData ? formData.companyName : '' %>"
             placeholder="Enter item name"
             class="mt-1 block w-full border rounded px-3 py-2 text-sm" />
        <% if (formErrors?.companyName) { %>
        <ul class="text-error text-sm">
            <% formErrors.companyName.forEach(msg => { %>
            <li><%= msg %></li>
            <% }) %>
        </ul>
        <% } %>
    </div>
  </div>

  <div class="flex justify-center">
    <button type="submit"
            class="px-6 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 shadow">
      Create Item
    </button>
  </div>
</form>
