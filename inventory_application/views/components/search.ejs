<div class="max-w-md p-2">
    <form id="searchForm" action="<%= baseUrl + '/?' + updateQuery({ page: 1 }) %>" method="GET" 
        class="flex flex-col sm:flex-row items-start bg-bg-alt rounded shadow p-2">
        <div class="flex flex-row items-center">
            <div class="px-2">
                <svg class="w-5 h-5 text-text-muted" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M21 21l-4.35-4.35M16.65 16.65A7.5 7.5 0 1116.65 2a7.5 7.5 0 010 15z" />
                </svg>
            </div>
            <input id="searchInput" type="text" name="search" placeholder="Search..."
                <% if(searchQuery) { %>
                    value="<%= searchQuery %>"
                <% } %>
                class="flex-grow bg-transparent focus:outline-none px-3 py-2 text-sm" />
        </div>
        <button type="submit" class="ml-2 bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded">
            Search
        </button>
    </form>
</div>  

