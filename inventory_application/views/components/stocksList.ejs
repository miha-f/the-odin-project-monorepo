<h1 class="text-4xl font-bold text-text">Stock items</h1>
<div class="overflow-x-auto p-4">
    <% stocks.forEach(stock => { %>
        <div class="space-y-4 lg:space-y-0 border-b">
            <div class="grid grid-cols-1 lg:grid-cols-7 gap-2 items-center p-2 
                bg-bg-alt rounded shadow hover:bg-overlay transition">
                <div class="flex justify-center lg:justify-start lg:col-span-1">
                    <img src="<%= stock.image_url %>" alt="Item Image" class="w-[50px] h-[50px] object-cover rounded" />
                </div>
                <div class="lg:col-span-6 grid grid-cols-2 lg:grid-cols-6 gap-2">
                    <div class="text-text font-medium"> 
                        <p class="text-text-muted text-xs">Name</p>
                        <a href="/items/<%= stock.item_id %>"
                        class="hover:underline">
                            <%= stock.item_name %> 
                        </a>
                    </div>
                    <div class="text-muted">
                        <p class="text-text-muted text-xs">Category</p>
                        <a href="/categories/<%= stock.category_id %>"
                        class="hover:underline">
                            <%= stock.category_name %>
                        </a>
                    </div>
                    <div class="text-muted">
                        <p class="text-text-muted text-xs">Company</p>
                        <a href="/companies/<%= stock.company_id %>"
                        class="hover:underline">
                            <%= stock.company_name %>
                        </a>
                    </div>
                    <div class="text-text">
                        <p class="text-text-muted text-xs">Quantity</p>
                        <%= stock.quantity %>
                    </div>
                    <div class="text-success font-semibold">
                        <p class="text-text-muted text-xs">Price</p>
                        $<%= stock.price %>
                    </div>
                    <div class="text-muted text-sm">
                        <p class="text-text-muted text-xs">Updated</p>
                        <%= stock.formattedDate %>
                    </div>
                </div>
            </div> 
        </div>
    <% }); %>
</div>

