<div class="overflow-x-auto p-6">
  <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
    <thead class="bg-gray-100 dark:bg-gray-800">
      <tr>
        <th class="px-4 py-3 text-left text-sm font-medium text-gray-600 dark:text-gray-300">Image</th>
        <th class="px-4 py-3 text-left text-sm font-medium text-gray-600 dark:text-gray-300">Name</th>
        <th class="px-4 py-3 text-left text-sm font-medium text-gray-600 dark:text-gray-300">Category</th>
        <th class="px-4 py-3 text-left text-sm font-medium text-gray-600 dark:text-gray-300">Company</th>
        <th class="px-4 py-3 text-left text-sm font-medium text-gray-600 dark:text-gray-300">Quantity</th>
        <th class="px-4 py-3 text-left text-sm font-medium text-gray-600 dark:text-gray-300">Price</th>
        <th class="px-4 py-3 text-left text-sm font-medium text-gray-600 dark:text-gray-300">Updated</th>
        <th class="px-4 py-3"></th>
      </tr>
    </thead>
<% items.forEach(item => { %>
    <tbody class="bg-white divide-y divide-gray-200 dark:bg-gray-900 dark:divide-gray-700">
      <tr class="hover:bg-gray-50 dark:hover:bg-gray-800 transition">
        <td class="px-4 py-3">
          <img src="<%= item.image_url %>" alt="Item Image" class="w-12 h-12 object-cover rounded">
        </td>
        <td class="px-4 py-3 text-sm text-gray-900 dark:text-white font-medium"><%= item.name %></td>
        <td class="px-4 py-3 text-sm text-gray-600 dark:text-gray-400"><%= item.category_id%></td>
        <td class="px-4 py-3 text-sm text-gray-600 dark:text-gray-400"><%= item.company_id%></td>
        <td class="px-4 py-3 text-sm text-gray-900 dark:text-white">5</td>
        <td class="px-4 py-3 text-sm text-green-600 dark:text-green-400 font-semibold">$999.99</td>
        <td class="px-4 py-3 text-sm text-gray-500 dark:text-gray-400"><%= item.updated_at %></td>
        <td class="px-4 py-3">
          <button class="text-sm px-3 py-1 bg-blue-600 text-white rounded hover:bg-blue-700 dark:bg-blue-500 dark:hover:bg-blue-600">Edit</button>
        </td>
      </tr>
    </tbody>
<% }); %>
  </table>
</div>
