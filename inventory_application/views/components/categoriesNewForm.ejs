<form action=<%= categoryId ? ('/categories/' + categoryId + '/update') : '/categories' %> method="POST" class="max-w-4xl mx-auto p-6 space-y-6">
  <h1 class="text-4xl font-bold text-text"><%= categoryId ? 'Edit' : 'Create' %> Category</h1>
  <div class="flex flex-col sm:flex-row items-center gap-4">
    <div class="w-full">
      <label for="categoryName" class="block text-sm font-medium text-text">Item Name</label>
      <input type="text" id="categoryName" name="categoryName" required
             value="<%= formData ? formData.categoryName : '' %>"
             placeholder="Enter item name"
             class="mt-1 block w-full border rounded px-3 py-2 text-sm" />
        <% if (formErrors?.categoryName) { %>
        <ul class="text-error text-sm">
            <% formErrors.categoryName.forEach(msg => { %>
            <li><%= msg %></li>
            <% }) %>
        </ul>
        <% } %>
    </div>
  </div>

  <div class="flex justify-center">
    <button type="submit"
            class="px-6 py-2 bg-blue-600 text-white rounded hover:bg-blue-700 shadow">
      <%= categoryId ? 'Edit' : 'Create' %> Item
    </button>
  </div>
</form>
