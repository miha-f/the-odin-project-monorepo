<div class="max-w-4xl mx-auto p-6 space-y-6">
    <h1 class="text-4xl font-bold text-text">Category</h1>
    <div class="flex items-center space-x-4">
        <div>
            <h1 class="text-2xl font-bold text-text"><%= category.name %></h1>
            <div class="grid grid-rows-2">
                <div class="grid grid-cols-1 sm:grid-cols-2">
                    <p class="text-sm text-text-muted">Updated on: </p>
                    <p class="text-sm text-text-muted"><%= category.updatedAtFormatted%></p>
                </div>
                <div class="grid grid-cols-1 sm:grid-cols-2">
                    <p class="text-sm text-text-muted">Created on: </p>
                    <p class="text-sm text-text-muted"><%= category.createdAtFormatted%></p>
                </div>
            </div>
        </div>
    </div>

    <div class="flex justify-left space-x-2">
        <a href="/items//edit" class="px-4 py-2 bg-blue-600 text-white rounded hover:bg-blue-700">Edit</a>
        <form action="/items//delete" method="POST" onsubmit="return confirm('Are you sure?')">
        <button type="submit" class="px-4 py-2 bg-red-600 text-white rounded hover:bg-red-700">Delete</button>
        </form>
    </div>
</div>
