<!DOCTYPE html>
<html>

<head>
    <title>Inventory</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/output.css">
</head>

<body class="bg-bg text-text">
    <nav class="
        flex justify-between border-b border-border
        top-0 left-0 right-0 h-16 bg-surface z-50 flex items-center px-4
    ">
        <button id="sidebar-toggle" class="md:hidden">
            <svg id="sidebar-toggle-icon" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" 
                class="
                    size-6
                    transform transition-transform duration-300
            ">
                <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5 21 12m0 0-7.5 7.5M21 12H3" />
            </svg>
        </button>

        <div>Inventory</div>

        <button id="menu-toggle" class="md:hidden">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
            </svg>
        </button>
        
        <div class="hidden md:flex">
            <a href="#" class="block px-2 py-2 rounded hover:bg-overlay">Dashboard</a>
            <a href="#" class="block px-2 py-2 rounded hover:bg-overlay">Users</a>
            <a href="#" class="block px-2 py-2 rounded hover:bg-overlay">Settings</a>
            <a href="#" class="block px-2 py-2 rounded hover:bg-overlay">Logout</a>
        </div>
    </nav>

    <div id="mobile-menu" class="
        md:hidden
        max-h-0 overflow-hidden
        top-16 left-0 right-0 z-40 shadow
        transition-all duration-500 ease-linear
    ">
        <a href="#" class="block px-2 py-2 rounded hover:bg-overlay">Dashboard</a>
        <a href="#" class="block px-2 py-2 rounded hover:bg-overlay">Users</a>
        <a href="#" class="block px-2 py-2 rounded hover:bg-overlay">Settings</a>
        <a href="#" class="block px-2 py-2 rounded hover:bg-overlay">Logout</a>
    </div>

    <div id="mobile-sidebar" class="
        bg-surface
        fixed top-16 left-0 h-full w-64 shadow 
        transform -translate-x-full transition-transform duration-300 z-40
    ">
        <a href="#" class="block px-2 py-2 rounded hover:bg-overlay">Settings</a>
        <a href="#" class="block px-2 py-2 rounded hover:bg-overlay">Logout</a>
        <a href="#" class="block px-2 py-2 rounded hover:bg-overlay">Logout</a>
    </div>
    <div id="mobile-sidebar-overlay" class="
        fixed top-16 inset-0 backdrop-blur-sm hidden z-30
    "></div>

    <div class="grid grid-cols-1 md:grid-cols-[200px_1fr] md:h-screen">
        <div class="hidden md:flex md:flex-col md:bg-surface">
            <a href="#" class="block px-2 py-2 rounded hover:bg-overlay">Dashboard</a>
            <a href="#" class="block px-2 py-2 rounded hover:bg-overlay">Users</a>
            <a href="#" class="block px-2 py-2 rounded hover:bg-overlay">Settings</a>
            <a href="#" class="block px-2 py-2 rounded hover:bg-overlay">Logout</a>
        </div>
        <div class="container mx-auto">
            <main>
                <button id="toggle-dark">Toggle Dark</button>
                <%- include(view) %>
            </main>
        </div>
    </div>

    <footer>
    </footer>

    <script>
        const btn = document.getElementById('toggle-dark');
        const body = document.querySelector('body');

        btn.addEventListener('click', () => {
            document.documentElement.classList.toggle('dark');
        });

        const menuBtn = document.getElementById('menu-toggle');
        const mobileMenu = document.getElementById('mobile-menu');
        menuBtn.addEventListener('click', () => {
            const isOpen = mobileMenu.classList.contains('max-h-0');
            if (isOpen) {
                mobileMenu.classList.remove('max-h-0');
                mobileMenu.classList.add('max-h-96');
            } else {
                mobileMenu.classList.remove('max-h-96');
                mobileMenu.classList.add('max-h-0');
            }
            
            // mobileMenu.classList.toggle('hidden');
        });

        const sidebarBtn = document.getElementById('sidebar-toggle');
        const mobileSidebarBtnIcon = document.getElementById('sidebar-toggle-icon');
        const mobileSidebar = document.getElementById('mobile-sidebar');
        const mobileSidebarOverlay = document.getElementById('mobile-sidebar-overlay');
        sidebarBtn.addEventListener('click', () => {
            mobileSidebar.classList.toggle('-translate-x-full');
            mobileSidebarBtnIcon.classList.toggle('rotate-90');
            mobileSidebarOverlay.classList.toggle('hidden');
        });
        mobileSidebarOverlay.addEventListener('click', () => {
            mobileSidebar.classList.toggle('-translate-x-full');
            mobileSidebarBtnIcon.classList.toggle('rotate-90');
            mobileSidebarOverlay.classList.add('hidden');
        });
    </script>
</body>

</html>
