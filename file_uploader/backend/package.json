{
    "name": "backend",
    "type": "module",
    "version": "1.0.0",
    "private": true,
    "scripts": {
        "dev": "NODE_ENV=development node --watch src/server.js",
        "start": "NODE_ENV=production node src/server.js",
        "test": "NODE_ENV=test node --experimental-vm-modules node_modules/.bin/jest",
        "test:mock": "NODE_ENV=test-mock jest",
