    },
    "dependencies": {
        "@prisma/client": "^6.7.0",
        "@quixo3/prisma-session-store": "^3.1.13",
        "bcryptjs": "^3.0.2",
        "dotenv": "^16.5.0",
        "express": "^4.18.0",
        "express-async-handler": "^1.2.0",
        "express-session": "^1.18.1",
        "express-validator": "^7.2.1",
        "multer": "^1.4.5-lts.2",
        "passport": "^0.7.0",
        "passport-local": "^1.0.0"
    },
    "devDependencies": {
        "@faker-js/faker": "^9.7.0",
        "jest": "^29.7.0",
        "prisma": "^6.7.0",
        "supertest": "^7.1.1"
    }
